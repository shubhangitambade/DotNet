@{
}
<h1>Customer List</h1>
<hr/>

@{
    List<Customer> Customers = (List<Customer>)ViewData["allCustomers"];
}
<ol>
    @{
        foreach(Customer cust in Customers)
        {
            <li>@cust.Name | <a href="/customer/details/@cust.Id">Details</a> | <a href="/customer/remove/@cust.Id">Remove</a></li>
        }
    }
</ol>